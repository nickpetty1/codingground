import random

key1 = "e GgGgG d GGggg H ggggG l gGGgg o ggGgg r gGggG w ggggg"
encodedMessage = "ggggGGgGgGgGGgggGGggggGgg, gggggggGgggGggGgGGggGGggg!"
decodedMessage = "Hello, world!"

def decode(encoded,key):
    key = key.split()
    keyDict = {}
    for x in range(len(key) / 2):
        keyDict[key[x*2+1]] = key[x*2]
    temp = ""
    message = ""
    for letter in encoded:
        if letter == "g" or letter == "G":
            temp = temp + letter
        else:
            message += letter
        if keyDict.get(temp) != None:
            message = message + keyDict.get(temp)
            temp = ""
    print message
def encode(plainText):
    plainText =  list(plainText)
    keyDict = {}
    encoded = ""
    
    for letter in plainText:
        #print "debug",letter
        if (keyDict.get(letter) == None) and (letter.isalpha() == True):
            while keyDict.get(letter) == None:
                temp = ""
                for x in range(5):
                    temp = temp + random.choice("g""G")
                for key in keyDict:
                    if keyDict[key] == temp:
                        temp = ""
                keyDict[letter] = temp

    keyString =""
    for key in keyDict:
        keyString = keyString + " " + key + " " + keyDict[key]
    
    for letter in plainText:
        if keyDict.get(letter) != None:
            encoded = encoded + keyDict[letter]
        else:
            encoded = encoded + letter
    print keyString
    print encoded
    
    
